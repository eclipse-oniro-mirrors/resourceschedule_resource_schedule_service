import("//build/test.gni")
import("../../../ressched.gni")

group("unittest") {
  testonly = true
  deps = [
    ":resschedeventreporter_test",
    ":resschedfileutil_test",
    ":resschedhitracechain_test",
    ":resschedjsonutil_test",
    ":resschedstringutil_test",
    ":resschedsystemutil_test",
    ":resschedtimeutil_test",
