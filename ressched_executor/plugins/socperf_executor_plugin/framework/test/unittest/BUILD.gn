import("//build/test.gni")
import("../../../../../ressched_executor.gni")

config("module_private_config") {
    visibility = [ ":*" ]
}

module_output_path = "resource_schedule_service/ressched_executor"

ohos_unittest("socperf_executor_plugin_test") {
  module_out_path = module_output_path

  include_dirs = []

  sources = [
    "socperf_executor_config_test.cpp",
    "socperf_executor_plugin_test.cpp",
    "socperf_executor_wirte_node_test.cpp",
  ]

  configs = [ ":module_private_config" ]
  deps = [
    "${resschedexe_services}:resschedexesvc_static",
    "${resschedexe_socperf_executor_plugin}:socperf_executor_plugin",
  ]

  defines = []
  external_deps = [
    "cJSON:cjson",
    "c_utils:utils",
    "config_policy:configpolicy_util"
    "ffrt:libffrt",
    "hilog:libhilog",
    "ipc:ipc_single",
    "libxml12:libxml12",
  ]

  cflags = [
    "-Dprivate=public",
    "-Dprotected=public",
  ]

  sanitize = {
    cfi = true
    cfi_cross_dso = true
    debug = false
  }

  branch_protector_ret = "pac_ret"
}

group("unittest") {
  testonly = true
  deps = [ ":socperf_executor_plugin_test" ]
}
