import("//build/test.gni")
import("../../../../ressched.gni")

module_output_path = "resource_schedule_service/ressched"

ohos_unittest("NetworkLatencyControllerTest") {
  module_out_path = module_output_path

  include_dirs = [ "../../include" ]

  sources = [ "network_latency_controller_test.cpp" ]

  deps = [
    "${ressched_plugins}/frame_aware_plugin:frame_aware_plugin",
    "//third_party/googletest:gtest_main",
  ]

  external_deps = [ "ffrt:libffrt" ]
}

ohos_unittest("FrameAwarePluginTest") {
  module_out_path = module_output_path

  include_dirs = [
    "../../include",
    "${ressched_interfaces}/innerkits/ressched_client/include",
    "${ressched_services}/resschedmgr/pluginbase/include",
  ]

  sources = [ "frame_aware_plugin_test.cpp" ]

  deps = [
    "${ressched_plugins}/frame_aware_plugin:frame_aware_plugin",
    "//third_party/googletest:gtest_main",
  ]

  external_deps = [
    "ffrt:libffrt",
    "hilog:libhilog",
    "safwk:system_ability_fwk",
  ]
}

group("unittest") {
  testonly = true
  deps = [
    ":FrameAwarePluginTest",
    ":NetworkLatencyControllerTest",
  ]
}
